<h2>Editar el Lugar</h2>


           

            <form action="/places/{{_id}}/edit" method="POST" enctype="multipart/form-data">
            <input type="text" class="form-control-plaintext" id="place-name" name="name" value="{{name}}">
            <input type="number" class="form-control-plaintext" id="place-lat" name="lat" value="{{location.coordinates.[0]}}">
            
            <input type="number" class="form-control-plaintext" id="place-lng" name="lng" value="{{location.coordinates.[1]}}">
            <input type="text" class="form-control-plaintext" id="place-level" name="level" value="{{level}}">
            <input type="text" class="form-control-plaintext" id="place-description" name="description" value="{{description}}">
            
            <input type="text" class="form-control-plaintext" id="place-access" name="access" value="{{access}}">
            <input type="text" class="form-control-plaintext" id="place-parking" name="parking" value="{{parking}}">
            
            <input type="text" class="form-control-plaintext" id="place-type" name="type" value="{{type}}">
            
            <input type="text" class="form-control-plaintext" id="place-material" name="material" value="{{material}}">

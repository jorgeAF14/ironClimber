<h2>Detalles del Lugar</h2>

<form action="/places/{{_id}}/edit" method="GET">
    <label for="edit-btn">
        <input id="edit-btn" type="submit" value="Editar Lugar">
    </label>
</form>
<br>

<form action="/places/{{_id}}/delete" method="POST">
    <label for="delete-btn">
        <input id="delete-btn" type="submit" value="Borrar Lugar">
    </label>
</form>
<br>


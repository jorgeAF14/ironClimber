<h2>Detalles del Lugar</h2>
<section>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <figure id="placeDetailsMap"></figure>
            </div>
            <div class="col-md-9">
                {{!-- Carrousel bootstrap --}}
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner place-details-images">
                        {{#each place.images as | imageSrc |}}
                        <div class="carousel-item">
                            <img src="{{imageSrc}}" class="d-block w-100" alt="...">
                        </div>
                        {{/each}}
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="container place-details">
    <div class="row">
        <div class="col-12">
            <input type="text" disabled class="form-control-plaintext" id="place-name" value="{{place.name}}">
        </div>
        <div class="col-md-6">
            <form>
                <div class="form-group row">
                    <label for="place-lat" class="col-sm-3 col-form-label">LATITUD</label>
                    <div class="col-sm-9">
                        <input type="text" disabled class="form-control-plaintext" id="place-lat" value="{{place.location.coordinates.[0]}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="place-lng" class="col-sm-3 col-form-label">LONGITUD</label>
                    <div class="col-sm-9">
                        <input type="text" disabled class="form-control-plaintext" id="place-lng" value="{{place.location.coordinates.[1]}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="place-level" class="col-sm-3 col-form-label">LEVEL</label>
                    <div class="col-sm-9">
                        <input type="text" disabled class="form-control-plaintext" id="place-level" value="{{place.level}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="place-description" class="col-sm-3 col-form-label">DESCRIPCIÃ“N</label>
                    <div class="col-sm-9">
                        <input type="text" disabled class="form-control-plaintext" id="place-description" value="{{place.description}}">
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <form>
                <div class="form-group row">
                    <label for="place-access" class="col-sm-3 col-form-label">ACCESO</label>
                    <div class="col-sm-9">
                        <input type="text" disabled class="form-control-plaintext" id="place-access"
                            value="{{place.access}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="place-parking" class="col-sm-3 col-form-label">PARKING</label>
                    <div class="col-sm-9">
                        <input type="text" disabled class="form-control-plaintext" id="place-parking"
                            value="{{place.parking}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="place-type" class="col-sm-3 col-form-label">TIPO</label>
                    <div class="col-sm-9">
                        <input type="text" disabled class="form-control-plaintext" id="place-type" value="{{place.type}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="place-material" class="col-sm-3 col-form-label">MATERIAL</label>
                    <div class="col-sm-9">
                        <input type="text" disabled class="form-control-plaintext" id="place-material" value="{{place.material}}">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="container">
    <div class="row justify-content-begin">
        <div class="col-md-4">
            <form action="/places/{{place.id}}/edit" method="GET">
                <label for="edit-btn">
                    <input class="btn btn-warning mb-3" id="edit-btn" type="submit" value="Editar Lugar">
                </label>
            </form>
        </div>
        <div class="col-md-4">
            <form action="/places/{{place.id}}/delete" method="POST">
                <label for="delete-btn">
                    <input class="btn btn-danger mb-3" id="delete-btn" type="submit" value="Borrar Lugar">
                </label>
            </form>
        </div>            
    </div> 
</div>

<div class="container">
    <form action="/reviews/new-comment/{{place.id}}" method="POST">
        <div>
            <label>
                Comentarios :
                <input type="text" name="comment">
            </label>
            <label for="new-comment">
                <input id="new-comment" type="submit" value="Comentar">
            </label>
        </div>
    </form>
</div> 
    
{{#each reviews}}
<h4>{{ownername}}</h4>
<h6>{{comment}}</h6>
<hr>

{{/each}}

<script src="/js/map-styles.js"></script>
<script src="/js/place-details-map.js"></script>
